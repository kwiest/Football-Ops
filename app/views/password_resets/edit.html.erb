<h1>Reset Your Password</h1>

<% semantic_form_for :user, :url => password_reset_path, :html => { :method => :put } do |f| %>
	<%= f.error_messages %>

	<% f.inputs do %>
		<%= f.input :password, :required => true %>
		<%= f.input :password_confirmation, :required => true %>
	<% end %>
	
	<% f.buttons do %>
		<%= f.commit_button "Change password" %> or <%= link_to 'Cancel', root_path, :class => :cancel %>
	<% end %>
<% end %>
