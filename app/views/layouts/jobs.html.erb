<!doctype html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <title>FootballOps.org : Job Board</title>

  <!-- HTML5 shim, for IE6-8 support of HTML elements -->
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->

  <%= auto_discovery_link_tag(:rss, { :action => :feed }, { :title => "RSS Feed" }) %>
	
  <%= include_stylesheets :bootstrap, :jobs %>
	<%= include_javascripts :vendor %>
	
	<%= yield :head %>
</head>
<body>
	<div class="container">
		
    <h1>FootballOps.org Job Board</h1>
		
		<div id="jobs-nav" class="clearfix">
			<div id="home-link">
    	  <%= link_to "← Back to FootballOps Home", root_path %>
      </div>
		</div>
		
		<div id="jobs-wrap">
		  <div class="clearfix">
  		  <div id="feed-link">
          <%= link_to (image_tag "rss_24.png", :border => 0), feed_jobs_path %> RSS Feed
        </div>
      
  			<% if current_user %>
        	<div id="new-job-link">
        	  <%= link_to "Post a job", new_job_path, :class => "btn primary" %>
          </div>
        <% end %>
      </div>
      
    	<%= yield %>

		</div>
		
		<div class="footer">
		  Copyright &copy; 2011
	  </div>
	</div>
	
	<script type="text/javascript">

	  var _gaq = _gaq || [];
	  _gaq.push(['_setAccount', 'UA-8283237-4']);
	  _gaq.push(['_trackPageview']);

	  (function() {
	    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
	    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
	    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
	  })();

	</script>
	
</body>
