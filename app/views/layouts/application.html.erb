<!doctype html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  
  <%= csrf_meta_tag %>
  
  <title>FootballOps.org : <%= controller_name.humanize %></title>

  <!-- HTML5 shim, for IE6-8 support of HTML elements -->
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->
    
  <%= stylesheet_link_tag 'application' %>
  <%= javascript_include_tag 'application' %>
  
  <%= yield :head %>
</head>
<body>
  <header>
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner clearfix">
        <%= link_to 'FootballOps.org', root_path, class: 'brand' %>
        <ul class="nav">
          <li><%= link_to 'Directory', users_path %></li>
          <li><%= link_to "Divisions", divisions_path %></li>
          <li><%= link_to "Conferences", conferences_path %></li>
          <li><%= link_to "Districts", districts_path %></li>
          <li><%= link_to "Schools", schools_path %></li>
          <li><%= link_to "AFCA Convention", page_path("convention") %></li>
          <li><%= link_to "Conference Reps", conference_reps_users_path %></li>
          <li><%= link_to "National Committee", national_committee_users_path %></li>
        </ul>
        <ul class="nav pull-right">
          <% if signed_in? %>
            <li class="dropdown">
              <%= link_to '#', 'data-toggle' => 'dropdown' do %>
                <%= current_user.full_name %>
                <b class="caret"></b>
              <% end %>
              <ul class="dropdown-menu">
                <li><%= link_to 'Edit my profile', edit_user_path(current_user) %></li>
                <li><%= link_to 'Sign out', sign_out_path %></li>
              </ul>
            </li>
            <%= form_tag '#', method: :get, class: 'navbar-search pull-right' do %>
              <%= text_field_tag :q, nil, placeholder: 'Search directory', class: 'search-query' %>
            <% end %>
          <% else %>
            <li><%= link_to 'Sign-in', sign_in_path %></li>
            <li><%= link_to 'Sign-up', sign_up_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </header>
        
  <div id="main-content">
    <div id="flash">
      <% flash.each do |name, value| %>
        <div class="alert alert-<%= name %>">
          <%= value.html_safe %>
        </div>
      <% end %>
    </div>

    <%= yield %>
  </div>
  
  <footer>
    Copyright &copy; FootballOps.org
  </footer>

  <script type="text/javascript">
    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-8283237-4']);
    _gaq.push(['_trackPageview']);

    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();
  </script>
</body>
</html>
