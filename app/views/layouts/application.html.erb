<!doctype html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  
  <%= csrf_meta_tag %>
  
  <title>FootballOps.org : <%= controller_name.humanize %></title>

  <!-- HTML5 shim, for IE6-8 support of HTML elements -->
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->
	
  <%= include_stylesheets :bootstrap, :application %>
	<%= include_javascripts :vendor, :application %>
	
	<%= yield :head %>
</head>
<body>
	<div class="container">
		<div class="topbar">
	    <h3>
	      <%= link_to "FootballOps.org", root_path, class: "logo" %>
	    </h3>
	    <ul>
  			<li><%= link_to "Directory", users_path %></li>
  			<li><%= link_to "Divisions", divisions_path %></li>
  			<li><%= link_to "Conferences", conferences_path %></li>
  			<li><%= link_to "Districts", districts_path %></li>
  			<li><%= link_to "Schools", schools_path %></li>
  			<li><%= link_to "AFCA Convention" %></li>
  			<li><%= link_to "Conference Reps", conference_reps_users_path %></li>
  			<li><%= link_to "National Committee", national_committee_users_path %></li>
  		</ul>
		  <ul class="nav secondary-nav">
		    <% if signed_in? %>
		      <li class="menu">
		        <%= link_to current_user.full_name, "#", class: "menu" %>
		        <ul class="menu-dropdown">
		          <li><%= link_to "Edit profile", edit_user_path(current_user) %></li>
		          <li class="divider"></li>
		          <li><%= link_to "Sign out", sign_out_path %></li>
		        </ul>
		      </li>
		    <% else %>
		      <li><%= link_to "Sign-in", sign_in_path %></li>
		      <li><%= link_to "Sign-up", sign_up_path %></li>
		    <% end %>
		  </ul>
		</div>
		
		<div class="clearfix">
      <div id="sidebar">
        <h3>Recent Jobs</h3>
        <ul>
          <% recent_jobs.each do |job| %>
            <li>
              <%= job.created_at.strftime('%B %d') %> - <%= link_to "#{job.title} at #{job.school}", "jobs/#show/#{job.id}" %>
            </li>
          <% end %>
        </ul>
      
        <p><%= link_to "See all jobs", jobs_path %></p>
      </div>
		
  		<div id="main-content">
  			<% flash.each do |key, value| -%>
  				<div class="alert-message <%= key %>"><%= value %></div>
  			<% end -%>
			
  			<%= yield %>
  		</div>
  	</div>
		
		<div class="footer">
		  Copyright &copy; 2011
		</div>
	</div>

	<script type="text/javascript">
	  var _gaq = _gaq || [];
	  _gaq.push(['_setAccount', 'UA-8283237-4']);
	  _gaq.push(['_trackPageview']);

	  (function() {
	    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
	    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
	    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
	  })();
	</script>
</body>
</html>
