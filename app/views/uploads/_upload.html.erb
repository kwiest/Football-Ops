<div id="uploads">
  <h4>Uploaded files</h4>
  
	<% if resource.uploads.size > 0 %>
		<ul>
			<% resource.uploads.each do |u| %>
				<li>
					<%= link_to "#{u.name} (#{u.asset_file_name})", u.asset.url %><br />
					<span class="uploaded-time">
						Uploaded <%= distance_of_time_in_words(Time.now, u.created_at) %> ago by <%= u.user.full_name %>
						(<%= link_to "edit", "http://footballops.org/#{resource.class.to_s.downcase.pluralize}/#{resource.id}/uploads/#{u.id}/edit" %>,
						<%= link_to "delete", "http://footballops.org/#{resource.class.to_s.downcase.pluralize}/#{resource.id}/uploads/#{u.id}", :method => :delete, :confirm => "Are you sure you want to delete this download? There is no going back!" %>)
					</span>
				</li>
			<% end %>
		</ul>
	<% end %>
	<p>
  	<%= link_to "Upload a new file", "/#{resource.class.to_s.downcase.pluralize}/#{resource.to_param}/uploads/new", class: "btn" %>
  </p>
</div>
