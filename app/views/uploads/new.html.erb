<h1>New File Upload for <%= @parent.name %></h1>

<% simple_form_for [@parent, @upload], html: { multipart: true } do |f| %>
  <fieldset>
    <%= f.input :name, placeholder: "Western State 2011 Visitor's Guide" %>
    <%= f.input :asset, label: "File", hint: "Image files (jpg, jpeg, png) or PDFs only please." %>
  </fieldset>
  
  <div class="actions">
    <%= f.button :submit, "Upload file", class: "btn primary" %>
    <%= link_to "Cancel", @parent, class: "btn" %>
  </div>
<% end %>