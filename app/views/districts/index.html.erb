<h1>All Districts</h1>

<% if can? :create, District %>
  <p>
  	<%= link_to "Create a new district", new_district_path, class: "btn primary" %>
	</p>
<% end %>

<table class="zebra-striped">
  <thead>
    <tr>
      <th>Name</th>
      <% if can? :edit, District %>
        <th>Edit</th>
      <% end %>
      <% if can? :delete, District %>
        <th>Delete</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @districts.each do |d| %>
      <tr>
        <td><%= link_to d.name, district_path(d) %></td>
        <% if can? :edit, d %>
          <td><%= link_to "Edit", edit_district_path(d), class: "edit" %></td>
        <% end %>
        <% if can? :delete, d %>
          <td><%= link_to "Delete", district_path(d), method: :delete, class: "edit", confirm: "Are you sure you want to delete this district? There is no going back!" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>