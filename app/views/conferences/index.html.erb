<h1>All Conferences</h1>

<% if can? :create, Conference %>
  <p>
  	<%= link_to "Create a new conference", new_conference_path, class: "btn primary" %>
	</p>
<% end %>

<table class="zebra-striped">
  <thead>
    <tr>
      <th>Name</th>
      <% if can? :edit, Conference %>
        <th>Edit</th>
      <% end %>
      <% if can? :delete, Conference %>
        <th>Delete</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @conferences.each do |c| %>
      <tr>
        <td><%= link_to c.name, conference_path(c) %></td>
        <% if can? :edit, c %>
          <td><%= link_to "Edit", edit_conference_path(c), class: "edit" %></td>
        <% end %>
        <% if can? :delete, c %>
          <td><%= link_to "Delete", conference_path(c), method: :delete, class: "edit", confirm: "Are you sure you want to delete this conference? There is no going back!" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>