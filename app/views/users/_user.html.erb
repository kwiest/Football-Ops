<% div_for user do -%>
	<div class="float-left">
		<%= link_to image_tag(user.photo.url(:small)), user %>
	</div>
	<div class="float-left">
		<p><%= link_to user.full_name, user %></p>
		<small><%= user.school.name %></small>
	</div>
	<div class="float-right">
		<%= '<span class="accepted">admin</span>' if user.admin %>
		<%= '<span class="accepted">conf. rep</span>' if user.conference_rep %>
		<%= '<span class="accepted">nat. com.</span>' if user.national_committee %>
		<%= link_to("edit", edit_user_path(user), :class => :edit) if user.changeable_by?(current_user) %>
		<%= link_to("delete", user, :method => :delete, :confirm => "Are you sure you want to delete this user?", :class => :delete) if admin? %>
	</div>
	<div class="clear"></div>
<% end -%>