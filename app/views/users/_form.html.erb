<% div_for @user do %>
	<%= f.error_messages %>
	<% f.inputs do %>
		<%= f.input :first_name %>
		<%= f.input :last_name %>
	<% end -%>
	
	<% f.inputs do %>
		<%= f.input :school, :required => true, :include_blank => false %>
		<%= f.input :email %>
		<%= f.input :phone %>
		<%= f.input :fax %>
	<% end -%>
	
	<% f.inputs do %>
		<%= f.input :password %>
		<%= f.input :password_confirmation %>
	<% end -%>
	
	<% if admin? %>
		<% f.inputs do %>
			<%= f.input :conference_rep %>
			<%= f.input :national_committee %>
			<%= f.input :admin, :label => "Site administrator" %>
		<% end %>
	<% end %>
	
	<% f.buttons do %>
		<%= f.commit_button 'Save Profile' %> or <%= link_to 'Cancel', root_path, :class => :cancel %>
	<% end -%>
<% end %>
