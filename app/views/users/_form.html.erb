<fieldset>
  <%= f.input :first_name, placeholder: "First name" %>
  <%= f.input :last_name, placeholder: "Last name" %>
  <%= f.association :school, required: true, include_blank: false %>
</fieldset>

<fieldset>
  <%= f.input :email, placeholder: "you@school.edu" %>
  <%= f.input :phone, placeholder: "(555) 123-4567" %>
  <%= f.input :fax, placeholder: "(555) 123-4568" %>
</fieldset>

<fieldset>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>
</fieldset>

<% if can? :manage, User %>
  <fieldset>
    <%= f.input :conference_rep %>
    <%= f.input :national_committee %>
    <%= f.input :admin, label: "Site administrator" %>
  </fieldset>
<% end %>