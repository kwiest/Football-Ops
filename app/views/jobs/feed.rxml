xml.instruct!

xml.rss "version" => "2.0", "xmlns:dc" => "http://purl.org/dc/elements/1.1/" do
  xml.channel do
    xml.title       "FootballOps Job Board"
    xml.link        jobs_url
    xml.description "FootballOps Jobs from Around the Nation"

    @jobs.each do |job|
      xml.item do
        xml.title       job.title
        xml.link        job_url(job)
        xml.description job.description
        xml.guid        job_url(job)
      end
    end
  end
end