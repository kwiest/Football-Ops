<h1>Sign in</h1>

<%= simple_form_for @user_session do |f| %>
  <fieldset>
    <%= f.input :email %>
    <%= f.input :password %>
  </fieldset>
  
  <div class="actions">
    <%= f.button :submit, "Sign in", class: "btn primary" %>
    <%= link_to "Cancel", root_path, class: "btn" %>
  </div>
<% end %>

<p>Help! <%= link_to "I forgot my password", new_password_reset_path %></p>
