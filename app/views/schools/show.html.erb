<h1><%= @school.name %></h1>

<div class="float-left">
	<p>
		<strong>Division: </strong><%= @school.division.name %><br />
		<strong>Conference: </strong><%= @school.conference.name %><br />
		<strong>District: </strong><%= @school.district.name %>
	</p>
</div>

<div class="float-left">
	<p>
		<strong>Address:</strong><br />
		<%= @school.address1 %><br />
		<%= "#{@school.city}, #{@school.state} #{@school.zip}" %>
	</p>
</div>

<div class="clear"></div>

<h2>Travel Guide</h2>
<%= image_tag "pdf-icon.png" %>


<h2>DFOs</h2>
<table>
	<tr>
		<th>Name</th>
		<th>School</th>
		<th>Contact Info</th>
		<th>Conference Rep</th>
		<th>National Committee</th>
		<th>Affiliation</th>
	</tr>
	<%= render @school.users %>
</table>